<html>

<body>
<div>
    <form method="post">
        <input type="text" name="text" placeholder="Enter the message" />
        <input type="text" name="tag" placeholder="Tag"/>
        <button type="submit">Add</button>
    </form>
</div>
<div>Message list:</div>
{{#messages}}
    <div>
        <b>{{id}}</b>
        <span>{{text}}</span>
        <i>{{tag}}</i>
    </div>
{{/messages}}
</body>
</html>